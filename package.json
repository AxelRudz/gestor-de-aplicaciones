{
  "name": "repo-manager",
  "main": "main.js",
  "description": "Gestor de aplicaciones",
  "author": {
    "name": "Axel rudz",
    "email": "axelrudz@gmail.com"
  },
  "version": "1.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "electron": "ng build && electron .",
    "electron:serve": "concurrently \"ng serve --port 4000\" \"wait-on http://localhost:4000 && electronmon . --background\"",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^16.0.0",
    "@angular/common": "^16.0.0",
    "@angular/compiler": "^16.0.0",
    "@angular/core": "^16.0.0",
    "@angular/forms": "^16.0.0",
    "@angular/platform-browser": "^16.0.0",
    "@angular/platform-browser-dynamic": "^16.0.0",
    "@angular/router": "^16.0.0",
    "ansi_up": "^6.0.2",
    "ansi-to-html": "^0.7.2",
    "repo-manager": "file:",
    "rxjs": "~7.8.0",
    "tree-kill": "^1.2.2",
    "tslib": "^2.3.0",
    "zone.js": "~0.13.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^16.0.2",
    "@angular/cli": "~16.0.2",
    "@angular/compiler-cli": "^16.0.0",
    "@types/jasmine": "~4.3.0",
    "concurrently": "^8.2.2",
    "electron": "^23.3.13",
    "electron-builder": "^24.13.3",
    "electronmon": "^2.0.3",
    "jasmine-core": "~4.6.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.0.0",
    "typescript": "~5.0.2",
    "wait-on": "^7.2.0"
  },
  "build": {
    "asar": true,
    "appId": "Repo Manager - Platinum Edition",
    "productName": "Repo Manager - Platinum Edition",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "src/assets/**/*",
      "main.js"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "./src/assets/icono1.ico",
      "artifactName": "Repo Manager.exe"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "deleteAppDataOnUninstall": true,
      "shortcutName": "Repo Manager",
      "installerIcon": "./src/assets/icono1.ico",
      "uninstallerIcon": "./src/assets/icono1.ico",
      "installerHeaderIcon": "./src/assets/icono1.ico"
    }
  }
}
